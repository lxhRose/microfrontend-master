{
  "name": "toproemrmicrofrontend",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "i-all": "npm run dll && npm run install:portal && npm run install:root && npm run install:angular && npm run install:inpNurse",
    "install:portal": "cd ./src/portal/ && npm i",
    "install:root": "cd ./src/root/ && npm i",
    "install:angular": "cd ./src/angular/ && npm i",
    "install:inpNurse": "cd ./src/inpNurse/ && npm i",
    "start": "concurrently --kill-others --kill-others-on-fail -p name --names \"portal,root,angular,inpNurse\" \"npm run start:portal\" \"npm run start:root\" \"npm run start:angular\" \"npm run start:inpNurse\"",
    "start:portal": "cd ./src/portal/ && webpack-dev-server --config ./webpack.config.dev.js",
    "start:root": "cd ./src/root/ && webpack-dev-server --config ./webpack.config.dev.js",
    "start:angular": "cd ./src/angular/ && ng serve --disable-host-check --port 9002 --deploy-url http://localhost:9002/ --live-reload false",
    "start:inpNurse": "cd ./src/inpNurse/ && webpack-dev-server --config ./webpack.config.dev.js",
    "build": "npm run build:portal && npm run build:root && npm run build:angular && npm run build:inpNurse",
    "build:portal": "cd ./src/portal/ && webpack --config ./webpack.config.js -p --progress",
    "build:root": "cd ./src/root/ && webpack --config ./webpack.config.js -p --progress",
    "build:angular": "cd ./src/angular/ && ng build --prod --deploy-url ../../release/angular --output-hashing none",
    "build:inpNurse": "cd ./src/inpNurse/ && webpack --config ./webpack.config.js -p --progress",
    "dll": "npx webpack --config webpack.dll.config.babel.js --progress --color"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "add-asset-html-webpack-plugin": "^3.1.3",
    "ali-oss": "^6.1.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.2",
    "core-js": "^3.3.5",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.16.1",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^2.2.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0",
    "clean-webpack-plugin": "^3.0.0",
    "webpackbar": "^4.0.0"
  },
  "dependencies": {
    "concurrently": "^5.0.0",
    "core-js-bundle": "^3.4.4",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "single-spa": "^4.4.1",
    "single-spa-react": "^2.10.3",
    "systemjs": "4.1.0",
    "zone.js": "~0.9.1"
  }
}
